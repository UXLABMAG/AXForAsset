<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19002C"
    tools:context=".DetailLogic">

    <!-- Outer ScrollView wrapping all sections -->
    <ScrollView
        android:id="@+id/scrollViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Section -->
            <ImageView
                android:id="@+id/imgSection"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/tag1"
                android:padding="8dp"
                android:src="@drawable/loding" />

            <!-- Description Section -->
            <ScrollView
                android:id="@+id/scrollDescriptionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/linearDescriptionSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Judul"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Headline"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/tvDetailedDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terdapat beberapa masalah pada layout XML yang Anda berikan, khususnya terkait penggunaan ConstraintLayout dan ScrollView yang tidak optimal. Saya akan membantu memperbaiki layout ini agar lebih sesuai dengan praktik terbaik."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </ScrollView>

            <!-- Form Section 1 -->
            <ScrollView
                android:background="@drawable/tag1"
                android:id="@+id/scrollFormSection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linearFormSection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:background="@drawable/tag1"
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. username@gmail.com"
                        android:textColorHint="#CACACA"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/tvPaymentMethodLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />


                    <Spinner
                        android:background="@drawable/tag1"
                        android:id="@+id/spinnerPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:entries="@array/payment_methods"
                        android:layout_marginBottom="20dp"
                        android:popupBackground="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="#FFFFFF"
                        android:backgroundTintMode="src_over"
                        />

                    <Button
                        android:id="@+id/btnNext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#FFFFFF"
                        android:padding="15dp" />
                </LinearLayout>
            </ScrollView>

            <!-- Form Section 2 -->
            <ScrollView
                android:background="@drawable/tag1"
                android:id="@+id/scrollFormSection2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearFormSection2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terdapat beberap."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvEmailLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/tvEmailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="l@l.com"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvPaymentMethodLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/tvPaymentMethodValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paypal"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp" />

                    <Button
                        android:id="@+id/btnNext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#FFFFFF"
                        android:padding="15dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
