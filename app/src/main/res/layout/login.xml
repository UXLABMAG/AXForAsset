<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19002C"
    tools:context=".LoginLogic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME TO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/loding"
                android:layout_marginBottom="20dp"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g. Kelompok01"
                android:padding="10dp"
                android:background="#1E1E1E"
                android:textColorHint="#CACACA"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textViewUsernameError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username must be filled"
                android:textSize="14sp"
                android:textColor="#FF5F72"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g. 12345678"
                android:padding="10dp"
                android:background="#1E1E1E"
                android:textColorHint="#CACACA"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textViewPasswordError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Must be at least 8 character"
                android:textSize="14sp"
                android:textColor="#FF5F72"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#9B42F5"
                android:text="LOGIN"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
